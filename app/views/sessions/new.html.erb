<h1>Login:</h1>

<%= form_tag "/login", method: :post do %>
  <div>
    <label for="email">Email:</label>
    <input type="text" name="email">
  </div>
  <div>
    <label for="password">Password:</label>
    <input type="password" name="password">
  </div>
  <div>
    <input type="submit" value="Login">
  </div>
<% end %>



